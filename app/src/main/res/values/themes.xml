<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tron" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/layout_background</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorControlActivated">@color/main_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--        <item name="iconPreferenceColor">@color/main_color</item>-->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="iconSize">24dp</item>
        <item name="android:fontFamily">@font/graphiklcg_regular</item>
        <item name="itemIconSize">24dp</item>
        <item name="rippleColor">@color/ripple_transparent</item>
        <!--        <item name="transparent">@color/black_transparent</item>-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/tab_layout</item>
        <!-- Customize your theme here. -->
    </style>


<!--     Customize your theme here. -->

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="postSplashScreenTheme">@style/Theme.Tron</item>
    </style>

    <style name="SplashScreen" parent="Theme.Tron">
        <item name="android:windowBackground">@drawable/splah_screen</item>
    </style>

    <style name="TitleAppBarStyle" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/graphiklcg_bold</item>
        <item name="android:textColor">@color/tertiary_text</item>
    </style>

    <style name="Tab" parent="Widget.Design.TabLayout">
        <item name="tabPadding">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/graphiklcg_medium</item>
    </style>

    <style name="ShapeOverlayBottom" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/RoundCardView</item>
    </style>

    <style name="RoundCardView">
        <item name="cornerSizeBottomLeft">25dp</item>
        <item name="cornerSizeBottomRight">25dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Round">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="RoundImage">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="AiMsgRound">
        <item name="cornerSize">10dp</item>
    </style>
    
    <style name="OutlinedBox" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox
        </item>
        <item name="boxCollapsedPaddingTop">0dp</item>
    </style>

    <style name="ScrollView" parent="Theme.AppCompat">
        <item name="android:scrollIndicators">none</item>
    </style>

</resources>